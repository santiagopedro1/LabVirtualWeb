generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Leituras_de_sensor {
  id_sensor_de_usuario Int
  data_hora            DateTime @db.DateTime(0)
  leitura              Json

  @@id([id_sensor_de_usuario, data_hora])
}

model Sensores {
  id          Int    @id @default(autoincrement())
  nome        String @db.VarChar(255)
  dados_lidos Json
}

model Sensores_de_usuario {
  id            Int    @id @default(autoincrement())
  id_de_usuario Int
  id_de_sensor  Int
  descricao     String @db.VarChar(255)

  @@unique([id_de_usuario, id_de_sensor], map: "id_de_usuario")
}

model Usuarios {
  id              Int      @id @default(autoincrement())
  nome_de_usuario String   @db.VarChar(255)
  data_de_inicio  DateTime @db.Date
}
